<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/car_detailLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/car_detailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/row_padding_vertical"
            android:paddingRight="@dimen/row_padding_vertical"
            android:paddingTop="16dp"
            android:text="@string/car_detail_label"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/modelLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_model_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_model"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/operationalNumbersLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_operational_numbers_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailOperationalNumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_operational_numbers"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/car_details_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/platesLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_plates_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailPlates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_plates"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_typeLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_type_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_type"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_waterLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_water_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_water"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_foamLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_foam_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailFoam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_foam"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_motorPumpPerformanceLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_motor_pump_performance_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailMotorPumpPerformance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_motor_pump_performance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_detail_numberOfSeatsLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_number_of_seats_label"
                android:textColor="@color/black_overlay"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/car_detailNumberOfSeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/row_padding_vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/car_detail_no_number_of_seats"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>