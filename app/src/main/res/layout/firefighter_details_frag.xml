<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/firefighter_detailLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firefighter_detailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/row_padding_vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/firefighter_detailLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/row_padding_vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="TextView"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/firefighter_details_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/firefighter_detailBirthdayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/row_padding_vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/firefighter_detailExpiryMedicalTestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/row_padding_vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="TextView"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>