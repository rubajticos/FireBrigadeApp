<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/firebrigadeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/firebrigadeLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firebrigadeInfoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firebrigade_data_info"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/colorPrimaryDark"

                />

            <TextView
                android:id="@+id/firebrigadeDataTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/firebrigade_data_view"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

            <ProgressBar
                android:id="@+id/firebrigadeProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/firebrigadeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/firehouse" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noFirebrigadeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/noFirebrigadeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/presence_busy" />

            <TextView
                android:id="@+id/noFireBrigadeMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/firebrigade_no_content"
                android:textSize="17sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/noFirebrigadeAddInfo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="17sp"
                android:text="@string/firebrigade_add_info" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>